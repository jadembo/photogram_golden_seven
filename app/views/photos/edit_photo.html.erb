<h1> Edit Photo </h1>

<form action="/photos/<%=@id%>">
  <div>
    <label for="photo_caption">Caption: </label>
    <input id="photo_caption" type="text" name="photo_caption" value= "<%= @photo.caption %>">
  </div>

  <div>
    <label for="image_url">Image URL: </label>
    <input id="image_url" type="text" name="image_url" value= "<%= @photo.source %>">
  </div>
  <button>
    Update Photo
  </button>
</form>
